<% content_for :body_id do %>
  id="form_page"
<% end %>

<p id="page-loads">
</p>

<p id="cache-status">
</p>

<p id="flash">
</p>

<h2>These links and forms have been clientized</h2>

<div id="clientize_scope">

  <h3>These should keep us on the page, increment the page count, give us a meaningful
    flash message, and tell us the cache is up to date</h3>

  <ul id="thing-errors">
  </ul>

  <%= form_tag form_post_form_path, method: :post, id: "thing_form" do %>

  <p>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>
  </p>

  <%= submit_tag "Go" %>

  <% end %>

  <p>
    <%= link_to "POST link", form_post_link_path, method: :post %>
  </p>

  <p>
    <%= link_to "DELETE link", form_delete_path, method: :delete %>
  </p>

  <p>
    <%= link_to "DELETE link with html confirm", form_delete_path, method: :delete, data: { confirm: 'Are you sure you want to delete from an html anchor link?'}  %>
  </p>

  <p>
    <%= link_to "DELETE link with clientized confirm", form_delete_path, method: :delete, id: 'delete_anchor_link_with_confirm'  %>
  </p>

  <p>
    <%= button_to "POST button to", form_post_button_path, method: :post %>
  </p>

  <p>
    <%= button_to "POST button to with clientized confirm", form_post_button_path, method: :post, form: { id: 'confirm_post_button' } %>
  </p>

  <p>
    <%= button_to "POST button to with html confirm", form_post_button_path, method: :post, data: { confirm: 'Are you sure you want to post purely from the HTML?' } %>
  </p>

  <p>
    <a href="#" id="refresh">Get that isn't clientized, overridden with jQuery to perform get over ajax</a>
  </p>
  
  <h3>These should keep us on the page, but not increment the page count</h3>

  <p>
    <a href="#" id="toggle">Toggle message</a>
  </p>
  
  <p id="toggle-message">
    Message to be toggled.  This should be hidden, or shown, when toggle is clicked.
  </p>

  <h3>These should take us to another page, increment the page count, possibly give us a meaningful
    flash message, and tell us the cache is up to date</h3>

  <p>
    <%= link_to "Plain ol' GET link", form_other_path %>
  </p>

  <p>
    <%= button_to "GET button to", form_other_path, method: :get %>
  </p>

  <p>
    <%= button_to "POST button to with redirect", form_post_button_with_redirect_path, method: :post %>
  </p>

<!--
    <%= button_to "POST button to with confirm", form_post_button_path, method: :post, form: { id: 'confirm_post_button' }, data: { confirm: 'Are you sure?'} %>
-->

  <h3>This should take us to another page with the name value in the url, a la ?name=Blah, and increment the page count</h3>

  <%= form_tag form_get_form_path, method: :get do %>

  <p>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>
  </p>

  <%= submit_tag "Go" %>
  
  <% end %>
  

  <h3>This should take us to another page with the name value in the url and something extra, a la ?extra=Something+extra&name=Blah, and increment the page count</h3>

  <%= form_tag form_get_form_path(extra: 'Something extra'), method: :get do %>

  <p>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>
  </p>

  <%= submit_tag "Go" %>

  <% end %>


  <h3>This should post, redirect to another page with the name value and which button was pressed in the flash message, and increment the page count</h3>

  <%= form_tag form_post_multiple_buttons_path, method: :post do %>

    <p>
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name %>
    </p>

    <%= submit_tag "Alpha", name: 'alpha' %>
    <%= submit_tag "Beta", name: 'beta' %>

  <% end %>

</div>

<h2>These forms and links have not!</h2>

<div id="nonturbolink_scope">

    <%= button_to "GET button to", form_other_path, method: :get %>
  <br>

    <%= button_to "POST button to", form_post_button_path, method: :post %>
  <br>

    <%= button_to "POST button to with redirect", form_post_button_with_redirect_path, method: :post %>
  <br>

    <%= button_to "POST button to with confirm", form_post_button_path, method: :post, form: { id: 'confirm_post_button'}, data: { confirm: "Are you sure?" } %>
  <br>

  <p>
    <%= link_to "DELETE link", form_delete_path, method: :delete %>
  </p>

  <p>
    <%= link_to "DELETE link with html confirm", form_delete_path, method: :delete, data: { confirm: 'Are you sure you want to delete from an anchor link?'}  %>
  </p>

  <p>
    <%= link_to "POST link", form_post_link_path, method: :post %>
  </p>

  <ul id="thing-errors">
  </ul>

  <h3>Form submitting over POST</h3>

  <%= form_tag form_post_form_path, method: :post, id: "thing_form" do %>

  <p>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>
  </p>

  <%= submit_tag "Go" %>

  <% end %>


  <h3>Form submitting over GET</h3>

  <%= form_tag form_get_form_path, method: :get do %>

  <p>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>
  </p>

  <%= submit_tag "Go" %>
  
  <% end %>



</div>
